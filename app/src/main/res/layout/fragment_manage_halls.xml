<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/colorPrimary">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="-208dp"
        android:text="(Group Reservations Only)"
        android:textSize="14sp" />

    <ListView
        android:id="@+id/listview10"
        android:layout_width="match_parent"
        android:layout_height="137dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp" />

    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/listview10"
        android:layout_alignStart="@+id/seekBar2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:text="Freeze/Unfreeze hall" />

    <Button
        android:id="@+id/button9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/listview10"
        android:layout_alignEnd="@+id/textView10"
        android:text="Delete hall" />

    <EditText
        android:id="@+id/editText20"
        android:layout_width="257dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:hint="Enter new name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editText22"
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp"
        android:ems="10"
        android:hint="Enter new genre(s)"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editText23"
        android:layout_width="252dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="139dp"
        android:ems="10"
        android:hint="Enter new capacity"
        android:inputType="number" />

    <Button
        android:id="@+id/button18"
        android:layout_width="126dp"
        android:layout_height="58dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:text="Confirm" />

    <Button
        android:id="@+id/button19"
        android:layout_width="128dp"
        android:layout_height="58dp"
        android:layout_alignStart="@+id/button18"
        android:layout_alignTop="@+id/editText22"
        android:layout_marginTop="-10dp"
        android:text="Confirm" />

    <Button
        android:id="@+id/button20"
        android:layout_width="126dp"
        android:layout_height="58dp"
        android:layout_alignStart="@+id/button18"
        android:layout_alignTop="@+id/editText23"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="-6dp"
        android:text="Confirm" />

</RelativeLayout>